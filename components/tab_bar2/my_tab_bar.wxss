/* components/my_tab_bar.wxss */
.clearfix:after{
  visibility: hidden;
  display: block;
  font-size: 0;
  content: "";
  clear: both;
  height: 0;
}
.my_tab_bar{
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0;
  left:0;
  font-size: 28rpx;
  overflow: hidden;
  background: #fff;
  border-top: 1px solid #ddd;
}
image{
  margin-top:-6px;
  width: 20px;
  height: 20px;
  vertical-align:middle;
}
.my_tab_bar .my_share{
  float: left;
  width: 20%;
  padding: 5px;
  text-align: center;
  
}
.my_tab_bar .send_apply{
  width: 50%;
  float: right;
  height: 50px;
  font-size: 36rpx;
  line-height: 50px;
  text-align: center;
}