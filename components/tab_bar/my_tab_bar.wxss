/* components/my_tab_bar.wxss */
.clearfix:after{
  visibility: hidden;
  display: block;
  font-size: 0;
  content: "";
  clear: both;
  height: 0;
}
.my_tab_bar{
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0;
  left:0;
  font-size: 28rpx;
  color:#777;
  overflow: hidden;
  background: #fff;
  border-top: 1px solid #ddd;
}
.my_tab_bar .my_share{
  float: left;
  width: 20%;
  padding: 5px;
  text-align: center;
  
}
.my_tab_bar .my_share button{
  border: none;
  height: 50px;
  font-size: 28rpx;
}
.my_tab_bar .send_apply{
  width: 50%;
  float: right;
  color:#fff;
  height: 50px;
  font-size: 36rpx;
  line-height: 50px;
  background-color: #FF4D61; 
  text-align: center;
}
.my_tab_bar .share_active{
  color: #FF4D61;
  margin-top: -10px;
}