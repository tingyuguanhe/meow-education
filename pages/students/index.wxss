html{overflow: auto;height: 100%;}
body{overflow: auto;height: 100%;}
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: "";
  clear: both;
  height: 0;
}
.title{
  position: fixed;
  width:100%;
  top:0;
  left:0;
  z-index: 100;
}
.list_title{
  background: #FF4D61;
  width:100%;
  height: 110rpx;
  line-height: 110rpx;
  color: #fff;
  font-weight: normal;
  padding: 0 30rpx;
}
.list{
  font-size: 32rpx;
  margin: 220rpx 0 0 0;
}
.tea_item{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
  
}
.photo_img{
  width: 150rpx;
  height: 150rpx;
  float: left;
}
.tea_info{
  float: left;
  width: 240rpx;
  margin: 0 0 0 30rpx;
  font-size: 32rpx;
}
.color_888{
  color:#999;
}
.school{
   margin: 10rpx 0 20rpx 0;
}
.courses{
  float: left;
  color: #FF4D61;
  height: 170rpx;
  width: 230rpx;
  font-size: 34rpx;
}
.course_item{
  margin: 0 16rpx 0 0;
  font-size: 32rpx;
}
.search_nav{
  height: 110rpx;
  line-height: 110rpx;
  width:100%;
  background: #ff5e70;
  top:100rpx;
  left:0;
  color:#fff;
  font-size: 32rpx;
}
.search_nav .search_type{
  float: left;
  width: 33%;
  text-align: center;
  position: relative;
}
.search_nav .search_type_station{
  width: 30%
}
.search_nav .search_type_course{
  width: 33%
}
.search_nav .search_type_school{
  width: 36%;
}
.search_icon{
  width: 28rpx;
  height: 16rpx;
  margin: 0 0 0 10rpx;
  display: inline-block;
}
.school_type{
  border:1px solid #FF4D61;
  padding: 1px 5px;
  border-radius: 10px;
  font-size: 28rpx;
  color:#FF4D61;
  margin: 0 0 0 10px;
}
/*加载更多  */

.loading {
  margin: 0 5px;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.loadmore_tips {
  display: inline-block;
  vertical-align: middle;
}
.loadmore_tips_gray{
  color: #ddd;
  font-size: 30rpx;
}
.modal_box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 220rpx;
  left: 0;
  background: #000;
  filter:alpha(opacity=50);
  opacity: 0.5;
  overflow: hidden;
  z-index: 200;
  color: #fff;
}
.modal_dialog{
  width: 100%;
  position: fixed;
  top: 220rpx;
  left: 0;
  height: 360rpx;
  overflow: auto;
  background: #f9f9f9;
  z-index: 210;
}

.arrow{
  position: absolute;
  width:6px;
  height:6px;
  border-left:1px solid #fff;
  border-bottom:1px solid #fff;
  transform:rotate(-45deg);
  right: 12px;
  top: 42rpx;
}

.course_option{
  border: 1px solid #f1f1f1;
  padding: 20rpx 30rpx;
}

.noscroll{
  top:0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
} 


@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}

@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}

